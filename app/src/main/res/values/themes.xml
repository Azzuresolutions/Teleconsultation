<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewSwasthyaIngitOPD" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:fontFamily">@font/lexend_regular</item>

    </style>

    <style name="NoActionBar" parent="Theme.NewSwasthyaIngitOPD">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/white</item>
    </style>

    <style name="splash_title" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/lexend_semibold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="semi_bold" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/lexend_semibold</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="bold" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/lexend_bold</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="rochester_regular" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/rochester_regular</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="splash_desc" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/lexend_regular</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="regular" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/lexend_regular</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="regular_edittext" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/lexend_regular</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:padding">@dimen/_15sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="lexend_medium" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/lexend_regular</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColorHint">@color/edittext_hint</item>
    </style>

    <style name="lexend_medium_textview" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/lexend_medium</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColorHint">@color/edittext_hint</item>
    </style>

    <style name="lexend_medium_button" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/lexend_medium</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColorHint">@color/edittext_hint</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/shrine_pink_100</item>
        <item name="colorOnPrimary">@color/theme_color</item>
    </style>

    <style name="MyBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MYBottomSheetStyle</item>
    </style>

    <style name="MYBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:background">?attr/colorSurface</item>
        <item name="itemTextColor">@color/login_title_color</item>
        <item name="itemIconTint">@color/login_title_color</item>
        <item name="fontFamily">@font/lexend_regular</item>
    </style>

    <style name="ActiveBottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/lexend_medium</item>
        <item name="android:textColor">@color/login_title_color</item>
    </style>

    <style name="InctiveBottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/lexend_medium</item>
        <item name="android:textColor">@color/edittext_hint</item>
    </style>

    <style name="SimpleTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontFamily">@font/lexend_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bg</item>


    </style>

    <style name="DialogTheme" parent="Theme.NewSwasthyaIngitOPD">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="ChipTheme">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="fontFamily">@font/lexend_regular</item>
        <item name="android:fontFamily">@font/rochester_regular</item>
        <item name="closeIconEnabled">true</item>
    </style>

    <style name="MyRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/custom_radio_button</item>
        <item name="android:fontFamily">@font/lexend_regular</item>
    </style>

    <style name="RatingBarSmall" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/yellow_color</item>
        <item name="colorControlActivated">@color/yellow_color</item>
        <item name="android:progressBackgroundTint">@color/yellow_color</item>
    </style>
</resources>